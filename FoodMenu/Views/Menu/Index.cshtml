@model FoodMenu.Models.Restaurant

@{ 
    ViewBag.Title = "Cardápios";
}

<head>

    <style>

        button {
            color: white;
            background-color: rgb(151, 0, 65);
            border-radius: 20px;
            font-size: 40px;
            margin-left:28%;
        }

        h1 {
            color: rgb(151, 0, 65);
            font-weight: bold;
        }

    </style>

</head>

<center><h1 class="title">Cardápios</h1></center>
<hr />
<br />
<div class="col-md-12" style="height:50vh; width:80vw;">
    <div id="listMenus" class="list-group">
        
    </div>
    <hr />
    <button type="button" onclick="location.href='@Url.Action("Create", "Menu")'">Novo Cardápio</button>


</div>


<script>

     $(document).ready(function () {

            var list =  @Model.Menus;

            var array = [];
            array.push(list);
            var lista = array[0];

            for (var i = 0; i < lista.length; i++) {

                var url = '@Url.Action("Menu", "Menu")' + "?id=" + lista[i].IdMenu;
                var menuline = "<a href='" + url + "' id='" + lista[i].IdMenu + "' data-id='" + lista[i].IdMenu + "' class='list-group-item'>" + lista[i].NamMenu + "</a>";
                $("#listMenus").append(menuline);
            }

       

    });
</script>