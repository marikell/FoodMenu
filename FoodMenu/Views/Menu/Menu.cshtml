@model FoodMenu.Models.Menu
@{
    ViewBag.Title = "Cardápio";
}
<br><br>
@Scripts.Render("~/bundles/jquery")
<style>
    .codeblockHeader {
        background-color: rgb(151, 0, 65);
        border-radius: 20px;
        height: 5vh;
        line-height: 5vh;
        font-size: 1.5em;
        font-weight: bold;
    }

    .header-row{
        background-color: gr;
    }

    .codeblock {
        background-color: orange;
        border-radius: 20px;
        cursor: pointer;
        height: 5vh;
        line-height: 5vh;
        font-size: 1.5em;
        font-weight: bold;
    }


    h3{
        margin-left:30px;
    }
    .title {
        border-radius: 20px;
        background-color: rgb(151, 0, 65);

    }

    .blockHeader {
        border-radius: 20px;
        background-color: orange;
        color: white;
        font-size: 30px;
        width: 80vw;
        margin-left:40px;
    }

    .blockItem {
        border-radius: 20px;
        background-color: deepskyblue;
        color: white;
        font-size: 30px;
        width: 50vw;
        margin-left: 80px;
    }

    h2 {
        color: white;
        font-weight: bold;
        margin-left: 5%;
    }

    .module {
        width: 320px;
        border: 1px solid silver;
        color: white;
        text-align: center;
        transition: color 0.3s, background-color 0.3s;
    }

        .module:hover {
            background: #ffffff;
            color: black;
        }

        .module:active {
            box-shadow: 0px 0px 50px gray;
            -webkit-transform: scale(1.05);
            -webkit-transform-origin: -30 100%;
            -webkit-transform: rotate(-3deg);
        }

    .idented {
        margin-left: 10%;
    }
</style>

@Html.Hidden("idModal","");
<div class="title row">
    <h2>1. Dados do Cardápio</h2>
</div>

<br />
<br />
<div class="form-group">
    @Html.LabelFor(model => model.NamMenu, htmlAttributes: new { @class = "control-label col-md-1" })
    <div class="col-md-11">
        @Html.EditorFor(model => model.NamMenu, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NamMenu, "", new { @class = "text-danger" })
    </div>
</div>
<br />
<br />
<div class="form-group">
    @Html.LabelFor(model => model.DesMenu, htmlAttributes: new { @class = "control-label col-md-1" })
    <div class="col-md-11">
        @Html.EditorFor(model => model.DesMenu, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DesMenu, "", new { @class = "text-danger" })
    </div>
</div>
<br />
<br />

<div class="title row">
    <h2 style="color:white; margin-left: 20px;">2. Cabeçalhos</h2>
</div>

<br />
<div class="row" id="headers">

</div>

<div class="modal fade" id="AddMenuItem" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Adicionar Item</h4>
            </div>
            <div class="modal-body">


                @Html.Label("", "Item: ", new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBox("txtNamItem", "", "", new { @class = "form-control" })
                </div>
                <br />
                <br />
                <br />
                @Html.Label("", "Descrição do Item: ", new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBox("txtDesItem", "", "", new { @class = "form-control" })
                </div>
                <br />
                <br />
                <br />
                @Html.Label("", "Preço: ", new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBox("txtPreco", "", "", new { @class = "form-control", @type = "number" })
                </div>

                <br />
                <br />
                <br />

            </div>
            <div class="modal-footer">
                <button id="btnSaveItem" type="button" class="btn btn-default" onclick="btnSaveItem_Click(event)" data-dismiss="modal">Salvar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>


            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="AddHeaderMenu" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Adicionar Cabeçalho</h4>
            </div>
            <div class="modal-body">


                @Html.Label("", "Nome do Cabeçalho: ", new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBox("txtNamHeader", "", "", new { @class = "form-control" })
                </div>
                <br />
                <br />
                <br />
                @Html.Label("", "Descrição do Cabeçalho: ", new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBox("txtDesHeader", "", "", new { @class = "form-control" })
                </div>

                <br />
                <br />
                <br />

            </div>
            <div class="modal-footer">
                <button id="btnSaveHeader" type="button" onclick="btnSaveHeader_Click(event)" class="btn btn-default" data-dismiss="modal">Salvar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>


            </div>
        </div>

    </div>
</div>

<div class="form-group">
    <button class="btn btn-default" data-toggle="modal" data-target="#AddHeaderMenu">ADICIONAR CABEÇALHO</button>
</div>

<script>

    var IdModal = 0;

    $(document).ready(function () {


        fillHeadersAndItems();

    });


    function btnAddItem(button,event) {
        event.preventDefault();
        var button = $(button);
        var id = button.attr("id");
        $("#idModal").val(id);

    }

    function fillHeadersAndItems() {
        $.ajax({
            url: '@Url.Action("GetHeadersOfMenu", "Menu")',
            data: {


                IDMenu: '@Model.IdMenu'

            },
            error: function () {

            },
            dataType: 'json',
            success: function (list) {
                $("#headers").empty();

                var array = [];
                array.push(list);
                var lista = array[0];

                for (var i = 0; i < lista.length; i++) {

                    var lineHeader = "<ul class='header-row list-group' id='" + lista[i].IdMenuHeader + "''><li class='list-group-item'><b>" + lista[i].NamMenuHeader + "</b><button class='btn-default' onclick='btnAddItem(this,event)' id='" + lista[i].IdMenuHeader +  "' data-toggle='modal' data-target='#AddMenuItem'>+</button></li>";

                    for (var j = 0; j < lista[0].MenuItems.length; j++) {

                        lineHeader += "<li class='list-group-item list-group-item-warning'>" + lista[i].MenuItems[j].NamMenuItem + "</li>";
                    }
                    lineHeader += "</ul>";

                    //Para cada Header
                    $("#headers").append(lineHeader);
                    $("#headers").append("<br/>");
                }
            },
            type: 'GET'
        });
    }

    function btnSaveHeader_Click(event) {

        event.preventDefault();

        var LNamMenuHeader = $("#txtNamHeader").val();
        var LDesMenuHeader = $("#txtDesHeader").val();

         $.ajax({
            url: '@Url.Action("AddMenuHeader", "Menu")',
            data: {

                NamMenuHeader: LNamMenuHeader,
                DesMenuHeader: LDesMenuHeader,
                IDRestaurant: '@Model.IdRestaurant',
                IDMenu: '@Model.IdMenu'

            },
            error: function () {

            },
            dataType: 'json',
            success: function (object) {

              fillHeadersAndItems();

            },
            type: 'POST'
        });


    }

    function btnSaveItem_Click(event) {

        event.preventDefault();

        var LNamMenuItem = $("#txtNamItem").val();
        var LDesMenuitem = $("#txtDesItem").val();
        var LPrecoItem = $("#txtPreco").val();
        var LIDHeader = $("#idModal").val();

        $.ajax({
            url: '@Url.Action("AddMenuItem", "Menu")',
            data: {

                NamMenuItem: LNamMenuItem,
                DesMenuItem: LDesMenuitem,
                Price: LPrecoItem,
                IDHeader: LIDHeader

            },
            error: function () {

            },
            dataType: 'json',
            success: function () {


            },
            type: 'POST'
        });

    }
</script>
