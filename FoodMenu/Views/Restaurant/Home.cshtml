@{ 
    Layout = null;
}

@Styles.Render("~/Content/css")
@Styles.Render("~/Content/food_menu.css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<div class="container">
    <div class="centro">
        <div class="row text-center">
            <img style="width:120px; height:120px;" src="~/Content/images/fork.png" />
            <h1>Food Menu</h1>
            <h2 class="text-center"><small>Crie e gerencie os cardápios de seus restaurantes.</small></h2>
        </div>

        <div class="row">
            <div class="col-md-6">
                <button type="button" class="btn btn-success pull-right btn-lg" onclick="location.href='@Url.Action("Register", "Restaurant")'">
                    <span class="glyphicon glyphicon-plus"></span> Cadastrar Restaurante
                </button>
            </div>
            <div class="col-md-6">
                <button type="button" class="btn btn-success pull-left btn-lg" onclick="location.href='@Url.Action("Index", "Restaurant")'">
                    <span class="glyphicon glyphicon-th-list"></span> Listar Restaurantes
                </button>
            </div>
        </div>
    </div>    
</div>
