@model FoodMenu.Models.Restaurant

<head>
    <style>
        button {
            color: white;
            background-color: rgb(151, 0, 65);
            border-radius: 20px;
            font-size: 60px;
        }

        h1 {
            color: rgb(151, 0, 65);
            font-weight: bold;
        }
    </style>

</head>

<center><h1>Bem vindo, @Model.NamRestaurant</h1></center>
<br />
<br />
<br />

<div class="col-md-6">
    <button type="button" style="margin-left:20%;" onclick="onInfoClick()">Informações</button>

</div>
<div class="col-md-6">
    <button type="button" style="margin-left:5%;" onclick="onMenusClick()">Cardápios</button>

</div>

<script>

    function onInfoClick() {

        var Url = '@Url.Action("Info", "Restaurant")' + "?id=" + @Model.IdRestaurant;
        window.location.href = Url;
    }

    function onMenusClick() {
        var Url = '@Url.Action("Index", "Menu")' + "?id=" + @Model.IdRestaurant;
        window.location.href = Url;

    }

</script>