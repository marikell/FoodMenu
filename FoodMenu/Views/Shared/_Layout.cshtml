<!DOCTYPE html>
<html>
<head>
    <style>

    .fontChange{
        font-family: 'Helvetica';
        font-size: 20px;
        font-weight: bold;

    }

        .navbar-nav > li > a {
            color: white;
        }

        .navbar-brand {
            font-size: 30px;
            color: white;
        }        
        nav {
            background-color: rgb(151, 0, 65);
        }
    
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/food_menu.css")
</head>
<body style="background-color:white">    
    <nav class="navbar">
        <div class="fontChange container-fluid">
            <div class="navbar-header">                
                <a class="navbar-brand" href="@Url.Action("Home", "Restaurant")">FOODMENU</a>
            </div>
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Register", "Restaurant")">Cadastrar</a>
            </div>
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Restaurant")">Lista</a>
            </div>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="@Url.Action("Home", "Restaurant")"><span class="glyphicon glyphicon-home"></span> Voltar para Home</a></li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
      
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")    
    @RenderSection("scripts", required: false)
</body>
</html>
